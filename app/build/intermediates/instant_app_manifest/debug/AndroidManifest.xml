<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cz.fmo_det"
    android:targetSandboxVersion="2"
    android:versionCode="2"
    android:versionName="2.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="29" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.front"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.front.autofocus"
        android:required="false" />
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/Main" >
        <activity
            android:name="cz.fmo.RecordingActivity"
            android:configChanges=""
            android:label="FMO"
            android:screenOrientation="landscape"
            android:theme="@style/Recording" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="cz.fmo.BenchmarkingActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="Benchmark"
            android:screenOrientation="landscape"
            android:theme="@style/Benchmarking" >
            <intent-filter>
                <action android:name="cz.fmo.BenchmarkingActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="cz.fmo.PlaybackActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="Playback"
            android:screenOrientation="landscape"
            android:theme="@style/Playback" />
        <activity
            android:name="cz.fmo.SettingsActivity"
            android:label="@string/settings"
            android:parentActivityName="cz.fmo.RecordingActivity"
            android:screenOrientation="landscape" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cz.fmo.RecordingActivity" />
        </activity>
        <activity
            android:name="com.android.grafika.PlayMovieSurfaceActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="Play movie"
            android:screenOrientation="landscape"
            android:theme="@style/PlayMovieSurfaceActivity" >
            <intent-filter>
                <action android:name="com.android.grafika.PlayMovieSurfaceActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="android.support.VERSION"
            android:value="25.4.0" />
    </application>

</manifest>